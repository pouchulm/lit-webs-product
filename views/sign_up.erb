<div class = "container">
  <form class="col-4" action="/signup" method="post" enctype="multipart/form-data" style="margin:0 auto;">
    <div class="controls" >
      <div class="form-group" id=signup-form>
        <input class="form-control" name ="name" placeholder =" 名前を入力"><br>
        <input class="form-control" name="password" type ="password" placeholder ="パスワードを入力"><br>
        <input class="form-control" name = "password_confirmation"  type ="password" placeholder="パスワードをもう一度入力"><br>
